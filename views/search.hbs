<link rel='stylesheet' href='/css/search.css' />

<title>Búsqueda</title>
<div class="search">
    <div class="filters">
        <h3>Filtros</h3>
        <div><i class="fas fa-border-all"></i><a href="#">&nbspTodo</a></div>
        <div><i class="fas fa-user-friends"></i><a href="#">&nbspUsuarios</a></div>
        <div><i class="far fa-comment-alt"></i><a href="#">&nbspPublicaciones</a></div>
        <div><i class="fas fa-users"></i><a href="#">&nbspGrupos</a></div>
        <div><i class="fas fa-store"></i><a href="#">&nbspMercado</a></div>
        <div><i class="far fa-image"></i><a href="#">&nbspFotos</a></div>
        <div><i class="fas fa-pager"></i><a href="#">&nbspPáginas</a></div>
    </div>
    <div class="results">
    {{#if result}}
        {{#each result}}
            <div class="result">
                <div class="result-info">
                    <div class="user-avatar">
                        {{#each user}}
                            <img src="{{avatar}}" alt="">
                        {{/each}}  
                    </div>
                    <div class="user-info">
                        {{#each user}}
                            {{name}} {{surname}} <br>hace {{converter ../this.createdAt}}
                        {{/each}} 
                    </div>
                </div>
                <div class="result-action">
                    <button>Confirmar</button>
                    <button>Rechazar</button>
                </div>
            </div>
        {{/each}}
    {{else}}
        <h1>No se encontraron personas con el nombre introducido.</h1>
    {{/if}}
                <h3>Personas</h3>
                <div class="">

                </div>
                El nombre del pibe es {{name}}
                el email es {{email}}
           
     
    </div>
</div>
